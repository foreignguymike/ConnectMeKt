        android:layout_marginLeft="@dimen/viewPadding"
        android:layout_marginTop="@dimen/viewPadding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerTextView"
